{
    "name": "fantasyalarm/xray",
    "description": "A basic PHP instrumentation library for AWS X-Ray",
    "keywords": ["AWS", "X-Ray", "AWS X-Ray", "APM", "Tracing"],
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Patrick Kerrigan",
            "homepage": "https://patrickkerrigan.uk/"
        }
    ],

    "require": {
        "php": ">=7.0",
        "ext-json": "*",
        "ext-sockets": "*",
        "aws/aws-sdk-php": "^3"
    },

    "autoload": {
        "psr-4": {"Pkerrigan\\Xray\\": "src/"}
    },

    "autoload-dev": {
        "psr-4": {"Pkerrigan\\Xray\\": "tests/"}
    },

    "require-dev": {
        "phpunit/phpunit": "^6",
        "psr/simple-cache": "^1"
    },
    "suggest": {
        "psr/simple-cache": "Enable caching the retrieval of Xray sampling rules"
    }
}
